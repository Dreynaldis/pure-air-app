{
    "version": 2,
    "builds": [
      {
        "src": "server/src/index.ts",
        "use": "@vercel/node"
      },
      {
        "src": "client/package.json",
        "use": "@vercel/node",
        "config": {
          "distDir": "client/dist"
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/client/$1"
      }
    ]
  }
  