{
  "version": 2,
  "builds": [
    {
      "use": "@vercel/node",         
      "config": {
        "includeFiles": [
          "server/src/**/*",         
          "server/db/**/*"     ]     
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",           
      "dest": "/dist/index.js" 
    }
  ]
}
